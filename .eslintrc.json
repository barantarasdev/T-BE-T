{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["dist"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "no-warning-comments": [
      "error",
      { "terms": ["eslint-disable"], "location": "anywhere" }
    ]
  }
}
